<% if flash[:success] %>
   <p class="success"><%= flash[:success] %></p>
<% end %>

<% if flash[:failure] %>
   <p class="failure"><%= flash[:failure] %></p>
<% end %>
 
<div class="PageTitle">
  <h2 class="PageTitle__text">
    予定一覧
  </h2>

<p><%= link_to "新規追加", :new_schedule %></p>
</div>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th></th>
      <th>終日</th>
      <th>更新日時</th>
      <th>詳細</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.id %></td>
        <td><%= schedule.title %></td>
        <td><%= schedule&.start_at&.strftime("%Y年 %m月 %d日")%></td>
        <td><%= schedule&.end_at&.strftime("%Y年 %m月 %d日")%></td>
        <td><% if schedule.is_all_day == true %>
            ○
            <% else schedule.is_all_day == false %>

            <% end %>
        </td>
        <td><%= schedule.updated_at.strftime("%Y年 %m月 %d日 %H時 %M分")%></td>
       
        <td>
         <%= link_to "詳細", schedule %>
        </td>
        <td>
         <%= link_to "編集", [:edit, schedule] %>
         </td>
        <td>
         <%= link_to "削除", schedule, method: :delete, data: {confirm: "本当に削除しますか？" } %>
         </td>

      </tr>
    <% end %>
    
      
 </tbody>
 </table>
  <div>
    
    <p>  予定の合計数 <%= @schedules_total%> </p> 
       
    <p>  本日の日付 <%= Time.now.strftime("%Y/%m/%d")%> </p>
       
  </div>
